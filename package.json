{
  "name": "cheapblinds-backend",
  "version": "1.0.0",
  "type": "module",
  "license": "ISC",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "lint:js": "eslint \"./**/*.{js,jsx}\"",
    "docker:up-dev": "cross-env NODE_ENV=development ENV_FILE=.env docker compose up --build",
    "docker:up-prod": "cross-env NODE_ENV=production ENV_FILE=.env.development docker compose up -d --build",
    "format:code": "prettier --write \"src/**/*.js\"",
    "format:prisma": "npx prisma format",
    "db:init": "npx prisma init",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "npx prisma db seed",
    "db:reset": "npx prisma migrate reset"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "node prisma/seed.js"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^9.20.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.5.0"
  },
  "dependencies": {
    "@apollo/server": "^5.1.0",
    "@as-integrations/express4": "^1.1.2",
    "@graphql-tools/merge": "^9.1.3",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "envalid": "^8.1.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "graphql": "^16.12.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.9.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.7",
    "prisma": "^7.1.0",
    "redis": "^5.10.0",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5",
    "xss-clean": "^0.1.4"
  },
  "imports": {
    "#modules/*": "./src/api/modules/*",
    "#config/*": "./src/config/*",
    "#middleware/*": "./src/middleware/*",
    "#lib/*": "./src/lib/*"
  }
}
